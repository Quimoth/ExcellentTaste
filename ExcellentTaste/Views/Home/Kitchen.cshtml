@model IEnumerable<ExcellentTaste.Models.ProductOrderModel>

@{
    ViewBag.Title = "Keuken";
}

<h2>Keuken</h2>

@using (@Html.BeginForm())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductOrderStatus)
            </th>
            <th>
                @Html.Label("Save Changes")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelitem => item.Product.Name)
                </td>
                <td>
                    @Html.AntiForgeryToken()
                    <div>
                        @Html.EnumDropDownListFor(modelItem => item.ProductOrderStatus, htmlAttributes: new { @class = "dropdown" })
                    </div>
                </td>

                <td>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </td>
            </tr>

        }


    </table>
}
